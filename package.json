{
  "name": "light-hooks",
  "version": "2.0.0",
  "description": "A collection of useful React hooks including mobile device detection",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build:prod && npm run test",
    "publish:npm": "npm publish --access public",
    "publish:dry": "npm publish --dry-run --access public",
    "publish:dev": "npm version prerelease --preid=dev && npm run publish:dry",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:dev": "npm run build:dev && npm run test && echo Dev build ready for testing",
    "release:prod": "npm run build:prod && npm run test && echo Production build ready for release"
  },
  "keywords": [
    "react",
    "hooks",
    "mobile",
    "responsive",
    "breakpoint",
    "typescript",
    "react-hooks",
    "utilities"
  ],
  "author": "Gourav2609",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gourav2609/light-hooks.git"
  },
  "homepage": "https://github.com/Gourav2609/light-hooks#readme",
  "bugs": {
    "url": "https://github.com/Gourav2609/light-hooks/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/react": "^18.2.45",
    "cross-env": "^10.0.0",
    "rollup": "^4.9.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
